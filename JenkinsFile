pipeline {
    agent none
    stages {
        stage('Maven Build') {
            agent {
                docker {
                    image 'maven:latest'
                    args '-v /root/.m2:/root/.m2'

                }

            }
            steps {
                echo "2. Maven Build Stage"
                sh 'mvn -B clean clean package '

            }

        }
        stage('Image Build') {
            agent {
                label 'master'

            }
            steps {
                echo "3. Image Build Stage"
                sh 'docker build -f Dockerfile --build-arg jar_name=target/cloud-native-homework-1.0-SNAPSHOT.jar -t cloud-native-homework:${BUILD_ID} . '
                sh 'docker tag cloud-native-homework:${BUILD_ID} harbor.edu.cn/nju12/cloud-native-homework:${BUILD_ID}'

            }

        }
        stage('Push') {
            agent {
                label 'master'

            }
            steps {
                echo "4. Push Docker Image Stage"
                sh "docker login harbor.edu.cn -u nju12 -p nju122022"
                sh "docker push harbor.edu.cn/nju12/cloud-native-homework:${BUILD_ID}"

            }

        }

    }

}

node('slave') {
    container('jnlp-kubectl') {
        stage('Git Clone') {
            git branch:'master',url: "https://github.com/ionnnnnnn/cloud-native-homework.git"

        }
        stage('YAML') {
            echo "5. Change YAML File Stage"
            sh 'sed -i "s#{VERSION}#${BUILD_ID}#g" ./jenkins/scripts/cloud-native-homework.yaml'

        }
        stage('Deploy') {
            echo "6. Deploy To K8s Stage"
            sh 'kubectl apply -f ./jenkins/scripts/cloud-native-homework.yaml'
            sh 'kubectl apply -f ./jenkins/scripts/cloud-native-homework-serviceMonitor.yaml'

        }
        stage('RTF Test'){
            echo "RTF Test Stage"
            sh 'kubectl apply -f ./jenkins/scripts/rtf.yaml -n nju12'

        }
    }

}